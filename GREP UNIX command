#include <stdio.h>
#include <string.h>

int main() {
    char filename[20], pattern[20];
    char content[] = "Learning UNIX System Programming";

    printf("Enter filename: ");
    scanf("%s", filename);

    printf("Enter search pattern: ");
    scanf("%s", pattern);

    if (strstr(content, pattern)) {
        printf("%s\n", content);
    }

    return 0;
}
