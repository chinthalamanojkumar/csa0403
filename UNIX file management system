#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <string.h>

int main() {
    int fd;
    char data[] = "File Handling Using UNIX Calls";
    char buffer[100];

    fd = open("demo.txt", O_CREAT | O_RDWR | O_TRUNC, 0644);

    write(fd, data, strlen(data));
    lseek(fd, 0, SEEK_SET);
    read(fd, buffer, strlen(data));
    buffer[strlen(data)] = '\0';

    printf("Data read from file: %s\n", buffer);

    close(fd);
    return 0;
}
